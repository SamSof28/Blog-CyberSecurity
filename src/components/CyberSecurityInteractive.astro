---
// Componente interactivo basado en la imagen de ciberseguridad
---

<div class="cyber-interactive-container">
  <!-- Imagen de fondo -->
  <div class="cyber-background">
    <div class="shield-main">
      <div class="shield-body">
        <div class="shield-lock">
          <div class="lock-body"></div>
          <div class="lock-shackle"></div>
        </div>
      </div>
    </div>
    
    <div class="golden-lock-small">
      <div class="lock-body"></div>
      <div class="lock-shackle"></div>
    </div>
    
    <div class="verification-badge">
      <div class="checkmark">✓</div>
    </div>
    
    <div class="platform-base">
      <div class="grid-pattern"></div>
    </div>
  </div>
  
  <!-- Efectos de partículas -->
  <div class="particles-container">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
  </div>
  
  <!-- Líneas de datos animadas -->
  <div class="data-streams">
    <div class="stream stream-1"></div>
    <div class="stream stream-2"></div>
    <div class="stream stream-3"></div>
    <div class="stream stream-4"></div>
  </div>
</div>

<style>
  .cyber-interactive-container {
    width: 350px;
    height: 350px;
    position: relative;
    margin: 0 auto;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .cyber-interactive-container:hover {
    transform: scale(1.05);
  }

  .cyber-background {
    width: 100%;
    height: 100%;
    position: relative;
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  /* Escudo principal */
  .shield-main {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 140px;
    height: 160px;
    z-index: 10;
    transition: all 0.3s ease;
  }

  .shield-main:hover {
    transform: translate(-50%, -50%) scale(1.1);
  }

  .shield-body {
    width: 100%;
    height: 100%;
    background: linear-gradient(145deg, #0f3460, #1a365d);
    border-radius: 20px 20px 60px 60px;
    box-shadow: 
      0 10px 30px rgba(0, 0, 0, 0.4),
      inset 0 2px 0 rgba(255, 255, 255, 0.1);
    position: relative;
    animation: shieldFloat 4s infinite ease-in-out;
  }

  .shield-lock {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50px;
    height: 40px;
  }

  .lock-body {
    width: 30px;
    height: 25px;
    background: linear-gradient(145deg, #00a8ff, #0078d4);
    border-radius: 8px;
    position: relative;
    box-shadow: 
      0 0 20px #00a8ff,
      inset 0 2px 0 rgba(255, 255, 255, 0.3);
    animation: lockGlow 2s infinite alternate;
  }

  .lock-shackle {
    position: absolute;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 20px;
    height: 15px;
    border: 3px solid #00a8ff;
    border-bottom: none;
    border-radius: 10px 10px 0 0;
    box-shadow: 0 0 15px #00a8ff;
  }

  /* Candado dorado */
  .golden-lock-small {
    position: absolute;
    top: 60%;
    right: 20%;
    width: 35px;
    height: 30px;
    z-index: 8;
    animation: lockFloat 3s infinite ease-in-out;
    transition: all 0.3s ease;
  }

  .golden-lock-small:hover {
    transform: scale(1.2);
  }

  .golden-lock-small .lock-body {
    width: 25px;
    height: 20px;
    background: linear-gradient(145deg, #ffd700, #ffb347);
    border-radius: 6px;
    box-shadow: 
      0 0 15px #ffd700,
      inset 0 2px 0 rgba(255, 255, 255, 0.4);
    animation: goldGlow 2.5s infinite alternate;
  }

  .golden-lock-small .lock-shackle {
    width: 15px;
    height: 12px;
    border: 2px solid #ffd700;
    border-bottom: none;
    border-radius: 8px 8px 0 0;
    box-shadow: 0 0 10px #ffd700;
  }

  /* Círculo de verificación */
  .verification-badge {
    position: absolute;
    top: 25%;
    right: 15%;
    width: 50px;
    height: 50px;
    background: linear-gradient(145deg, #00a8ff, #0078d4);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 
      0 0 25px #00a8ff,
      inset 0 2px 0 rgba(255, 255, 255, 0.3);
    z-index: 9;
    animation: checkFloat 3.5s infinite ease-in-out;
    transition: all 0.3s ease;
  }

  .verification-badge:hover {
    transform: scale(1.2);
  }

  .checkmark {
    color: white;
    font-size: 24px;
    font-weight: bold;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
    animation: checkPulse 1.5s infinite ease-in-out;
  }

  /* Plataforma base */
  .platform-base {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 280px;
    height: 80px;
    background: linear-gradient(145deg, #1a1a2e, #16213e);
    border-radius: 15px;
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    z-index: 1;
  }

  .grid-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(rgba(0, 150, 255, 0.3) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 150, 255, 0.3) 1px, transparent 1px);
    background-size: 20px 20px;
    border-radius: 15px;
    animation: gridPulse 3s infinite ease-in-out;
  }

  /* Partículas */
  .particles-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 5;
    pointer-events: none;
  }

  .particle {
    position: absolute;
    width: 3px;
    height: 3px;
    background: #00a8ff;
    border-radius: 50%;
    box-shadow: 0 0 6px #00a8ff;
    animation: particleFloat 4s infinite ease-in-out;
  }

  .particle:nth-child(1) { top: 20%; left: 20%; animation-delay: 0s; }
  .particle:nth-child(2) { top: 30%; right: 25%; animation-delay: 1s; }
  .particle:nth-child(3) { top: 70%; left: 30%; animation-delay: 2s; }
  .particle:nth-child(4) { top: 80%; right: 20%; animation-delay: 3s; }
  .particle:nth-child(5) { top: 50%; left: 10%; animation-delay: 1.5s; }

  /* Líneas de datos */
  .data-streams {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    pointer-events: none;
  }

  .stream {
    position: absolute;
    background: linear-gradient(90deg, transparent, #00a8ff, transparent);
    height: 1px;
    opacity: 0.6;
    animation: streamFlow 4s infinite ease-in-out;
  }

  .stream-1 {
    top: 20%;
    left: 10%;
    width: 80%;
    transform: rotate(15deg);
    animation-delay: 0s;
  }

  .stream-2 {
    top: 40%;
    left: 5%;
    width: 70%;
    transform: rotate(-10deg);
    animation-delay: 1s;
  }

  .stream-3 {
    top: 60%;
    left: 15%;
    width: 75%;
    transform: rotate(25deg);
    animation-delay: 2s;
  }

  .stream-4 {
    top: 80%;
    left: 8%;
    width: 85%;
    transform: rotate(-5deg);
    animation-delay: 3s;
  }

  /* Animaciones */
  @keyframes shieldFloat {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  @keyframes lockFloat {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-5px); }
  }

  @keyframes checkFloat {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-8px); }
  }

  @keyframes lockGlow {
    0% { box-shadow: 0 0 20px #00a8ff, inset 0 2px 0 rgba(255, 255, 255, 0.3); }
    100% { box-shadow: 0 0 30px #00a8ff, inset 0 2px 0 rgba(255, 255, 255, 0.5); }
  }

  @keyframes goldGlow {
    0% { box-shadow: 0 0 15px #ffd700, inset 0 2px 0 rgba(255, 255, 255, 0.4); }
    100% { box-shadow: 0 0 25px #ffd700, inset 0 2px 0 rgba(255, 255, 255, 0.6); }
  }

  @keyframes checkPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  @keyframes gridPulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }

  @keyframes particleFloat {
    0%, 100% { 
      transform: translateY(0px) translateX(0px);
      opacity: 0.6;
    }
    25% { 
      transform: translateY(-20px) translateX(10px);
      opacity: 1;
    }
    50% { 
      transform: translateY(-10px) translateX(-10px);
      opacity: 0.8;
    }
    75% { 
      transform: translateY(-30px) translateX(5px);
      opacity: 0.9;
    }
  }

  @keyframes streamFlow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.8; }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cyber-interactive-container {
      width: 280px;
      height: 280px;
    }
    
    .shield-main {
      width: 110px;
      height: 130px;
    }
    
    .golden-lock-small {
      width: 28px;
      height: 24px;
    }
    
    .verification-badge {
      width: 40px;
      height: 40px;
    }
    
    .checkmark {
      font-size: 20px;
    }
    
    .platform-base {
      width: 220px;
      height: 60px;
    }
  }
</style>